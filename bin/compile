#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing DarkNet"

# change to the the BUILD_DIR ($1)
cd $1

# download the binary (-O) silently (-s)
curl https://bitbucket.org/emaknyus/heroku_cbir_7_10_2017/raw/29d0bd72a29e67bb5b01f6cc5e749e67eaa0d30d/archive.tar.gz -s -O

# make a directory to untar (like unzip) the binary
mkdir -p vendor/darknet

# untar the binary to the directory we want
tar -C vendor/darknet -xvf archive.tar.gz

# delete tmp
rm -rf archive.tar.gz
